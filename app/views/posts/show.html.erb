<h1><%= @post.title %></h1>
<p><%= @post.body %></p>
<%= link_to "Edit Post", edit_post_path(@post) %>


<h3>Comments:</h3>
<%= link_to "Add New Comment", new_post_comment_path(@post) %>

<% @comments.reverse.each do |comment| %>
  <p><%= comment.body %></p>
  <%= link_to "Edit Comment", edit_post_comment_path(@post, comment) %>
<% end %>
